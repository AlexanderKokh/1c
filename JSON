&НаКлиенте
Процедура ОтправитьJSON()

	ПодлючениеHttp = ПараметрыПодключенияHttp();
	
	HTTPСоединение 	= Новый HTTPСоединение(ПодлючениеHttp.Адрес,,,,,,ПодлючениеHttp.ЗащищенноеСоединениеOpenSSL);
	
	ЗаписьJSON = Новый ЗаписьJSON;
	ПараметрыЗаписиJSON = Новый ПараметрыЗаписиJSON(, Символы.Таб);
	ЗаписьJSON.УстановитьСтроку(ПараметрыЗаписиJSON);
	ЗаписьJSON.ЗаписатьНачалоОбъекта();
	ЗаписьJSON.ЗаписатьИмяСвойства("date");
	ЗаписьJSON.ЗаписатьЗначение("11.01.2021");
	ЗаписьJSON.ЗаписатьКонецОбъекта();
	СтрокаJSON = ЗаписьJSON.Закрыть(); 
		
	ЗаголовокHTTP  = Новый Соответствие;
	ЗаголовокHTTP.Вставить("Content-Type", "application/json");

	Запрос = Новый HTTPЗапрос(ПодлючениеHttp.URLlogin,ЗаголовокHTTP);
	
	Запрос.УстановитьТелоИзСтроки(СтрокаJSON,"UTF-8",ИспользованиеByteOrderMark.НеИспользовать);

	HTTPОтвет = HTTPСоединение.ОтправитьДляОбработки(Запрос);
	
	Ответ =  Новый Структура("Код, Заголовки, Текст", HTTPОтвет.КодСостояния, HTTPОтвет.Заголовки, HTTPОтвет.ПолучитьТелоКакСтроку());
	 
КонецПроцедуры
